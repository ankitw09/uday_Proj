        function validateForm() {
            debugger;
  const nameInput = document.querySelector('input[name="name"]');
  const cardNumberInput = document.querySelector('input[name="cardno"]');
  const expirationDateInput = document.querySelector('input[name="expDate"]');
  const cvvInput = document.querySelector('input[name="cvv"]');

  if (!nameInput.value) {
    alert("Please enter a name.");
    return false;
  }

  if (!cardNumberInput.value) {
    alert("Please enter a card number.");
    return false;
  }

  if (!expirationDateInput.value) {
    alert("Please enter an expiration date.");
    return false;
  }

  if (!cvvInput.value) {
    alert("Please enter a CVV.");
    return false;
  }

  alert("Card Details are added successfully. Payment deducted automatically when the delivery cycle completes");
